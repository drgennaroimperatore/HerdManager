<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lactating Animals">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Litres/Day">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_productivity_event_milk_row_lactating_animals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0">

            </TextView>

            <TextView
               android:id="@+id/textview_productivity_event_milk_row_litres_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0">

            </TextView>

        </TableRow>


    </TableLayout>
</LinearLayout>