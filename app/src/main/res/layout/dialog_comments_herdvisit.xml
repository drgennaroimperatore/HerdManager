<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BlackHeadingTextMedium"
        android:layout_gravity="center_horizontal"
        android:text="Do you have comments about the visit?"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/secondary_header_dialog_comment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BlackHeadingTextMedium"
        android:layout_gravity="center_horizontal"
        android:text="(if not leave empty)"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/dialog_comments_herdvisit_editBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLength="500" />
    <TextView
        android:id="@+id/dialog_comments_char_limit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="0/500"
        style="@style/BlackHeadingTextSmall"
        android:layout_gravity="right"/>


    <Button
        android:id="@+id/dialog_comments_submit_button"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert comment" />

</LinearLayout>