<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.AddHerdDynamicFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add_herd_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           style="@style/AppTheme.Button"
            android:layout_weight="0.5"
            android:text="Edit Movements" />

        <Button
            android:id="@+id/button_add_herd_death"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Button"
            android:text="Add Death"
            />

    </LinearLayout>




    <ExpandableListView
        android:id="@+id/dynamic_event_expandable_list_view"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:scrollbars="vertical"

        android:longClickable="true"/>



</LinearLayout>