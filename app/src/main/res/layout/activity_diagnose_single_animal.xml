<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.ilri.herdmanager.ui.main.AddHerdVisitActivity" >

    <TextView
        android:id="@+id/textView_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        style="@style/WhiteHeadingTextMedium"
        android:text="Diagnose An Animal">
    </TextView>

    <TextView
        android:id="@+id/textView_type_of_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_heading"
        android:layout_weight="1"
        style="@style/WhiteHeadingTextMedium"
        android:text="Type of Animal">
    </TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P.wnd">

        </RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Young"></RadioButton>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adult">

        </RadioButton>

    </RadioGroup>

    <ScrollView
        android:id="@+id/signs_scroller"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_above="@+id/diagnose_button"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@color/colorPrimary"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:id="@+id/signs_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/diagnose_button"
        android:layout_width="137dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:textColor="@color/black"
        android:background="@color/colorPrimary"
        android:text="Diagnose Animal"></Button>


   </RelativeLayout>