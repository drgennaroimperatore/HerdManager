<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a New Farmer"
        style="@style/BlackHeadingTextLarge"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Credentials"
        style="@style/BlackHeadingTextMedium"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>




    <EditText
        android:id="@+id/editText_new_farmer_firstName"
        style="@style/NumberEditTextStyleDark"
        android:layout_width="151dp"
        android:layout_height="37dp"

        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="5dp"
        />

    <EditText
        android:id="@+id/editText_new_farmer_secondName"
        style="@style/NumberEditTextStyleDark"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/new_farmer_spinner_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Location"
        style="@style/BlackHeadingTextMedium"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/new_farmer_spinner_region_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Region"
        style="@style/BlackHeadingText"/>


    <Spinner
        android:id="@+id/spinnerFarmerRegion"
        android:layout_width="219dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
         />

    <TextView
        android:id="@+id/new_farmer_spinner_district_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="District"
        style="@style/BlackHeadingText"/>



    <Spinner
        android:id="@+id/spinnerFarmerDistrict"
        android:layout_width="219dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/new_farmer_spinner_kebele_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kebele"
        style="@style/BlackHeadingText"/>



    <Spinner
        android:id="@+id/spinnerFarmerKebele"
        android:layout_width="219dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
         />

    <Button
        android:id="@+id/button_add_new_farmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/black"
        android:text="Add Farmer"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_gravity="center"
         />

    </LinearLayout>


</LinearLayout>