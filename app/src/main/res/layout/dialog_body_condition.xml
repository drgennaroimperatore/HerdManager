<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Edit Body Condtion"
        style="@style/BlackHeadingTextMedium"
        android:layout_marginBottom="10dp">
    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/dialog_body_condition_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/BlackHeadingTextSmall"
                android:text="Level">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/BlackHeadingTextSmall"
                android:text="Aff P.Wnd">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/BlackHeadingTextSmall"
                android:text="Aff. Young">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/BlackHeadingTextSmall"
                android:text="Aff. Adult">
            </TextView>
        </TableRow>

    </TableLayout>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/dialog_body_condition_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:text="confirm"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"></Button>
</LinearLayout>