<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/herdvisit_history_list_row_textview_date"
        style="@style/WhiteHeadingTextSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:layout_gravity="left"
        android:layout_weight="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:id="@+id/herdvisit_history_list_row_view_visit_syncStatus_imgView"
        android:layout_width="12dp"
        android:layout_height="12dp"

        android:src="@drawable/drawable_sync_status_not_synced"
        android:layout_gravity="center">

    </ImageView>

    <Button
        android:id="@+id/herdvisit_history_list_row_button_view_visit_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
       style="@style/AppTheme.Button"
        android:text="Details"
        android:layout_weight="0.2"
        android:textColor="@color/black" />


</LinearLayout>