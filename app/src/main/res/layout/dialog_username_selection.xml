<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Provide Some Information"
        android:layout_gravity="center_horizontal"
        style="@style/BlackHeadingTextLarge"/>

    <EditText
        android:id="@+id/dialog_info_FirstName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/dialog_info_SecondName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Second Name" />

    <EditText
        android:id="@+id/dialog_info_Additional_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Profession" />
</LinearLayout>