<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/health_event_disease_row_diseaseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disease Name"
                style="@style/WhiteHeadingTextMedium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/placeholder_hedr_young"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affected Babies"
                    style="@style/WhiteHeadingTextSmall"/>

                <TextView
                    android:id="@+id/health_event_disease_row_number_of_affected_babies_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00"
                    style="@style/WhiteHeadingTextSmall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heading_number_of_affected_by_disease_young_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affected Young"
                    style="@style/WhiteHeadingTextSmall"/>

                <TextView
                    android:id="@+id/health_event_disease_row_number_of_affected_young_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00"
                    style="@style/WhiteHeadingTextSmall"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heading_number_of_affected_old_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.13"
                    android:text="Affected Old"
                    style="@style/WhiteHeadingTextSmall"/>

                <TextView
                    android:id="@+id/health_event_disease_row_number_of_affected_old_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00"
                    style="@style/WhiteHeadingTextSmall"/>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>