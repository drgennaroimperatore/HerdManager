<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title_herds_and_visits"
        style="@style/WhiteHeadingTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Farmer Names To Manage Herds"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/fragment_manage_herds_visits_search_farner_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Farmer">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/manage_herds_and_visits_reset_farmer_linearLayou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:id="@+id/fragment_manage_herds_visits_reset_search_farmer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_reset_search"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Search">
            </TextView>
        </LinearLayout>
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/herds_and_visits_expandableListView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_herds_and_visits"
        app:layout_constraintVertical_bias="0.683">

    </ExpandableListView>


</LinearLayout>