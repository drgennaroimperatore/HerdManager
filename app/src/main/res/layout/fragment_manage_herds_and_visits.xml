<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title_herds_and_visits"
        style="@style/WhiteHeadingTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap On Farmer Names To Manage Their Herds"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/fragment_manage_herds_visits_search_farner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Search Farmer"
            android:layout_marginRight="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/fragment_manage_herds_visits_reset_search_farmer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/colorPrimary"
            android:text="Reset Search"
            android:textColor="@color/black"/>
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/herds_and_visits_expandableListView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_herds_and_visits"
        app:layout_constraintVertical_bias="0.683">

    </ExpandableListView>


</LinearLayout>