<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_title_herds_and_visits"
        style="@style/WhiteHeadingTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap On Farmer Names To Manage Their Herds"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:layout_marginBottom="50dp"/>

    <ExpandableListView
        android:id="@+id/herds_and_visits_expandableListView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_title_herds_and_visits"
        app:layout_constraintVertical_bias="0.683">

    </ExpandableListView>

    <Button
        android:id="@+id/fragment_manage_herds_visits_search_farner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="104dp"
        android:background="@color/colorPrimary"
        android:text="Search Farmer"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/herds_and_visits_expandableListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title_herds_and_visits"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/fragment_manage_herds_visits_reset_search_farmer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Reset Search"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/fragment_manage_herds_visits_search_farner_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fragment_manage_herds_visits_search_farner_button"
        app:layout_constraintTop_toBottomOf="@+id/fragment_manage_herds_visits_search_farner_button" />

</androidx.constraintlayout.widget.ConstraintLayout>