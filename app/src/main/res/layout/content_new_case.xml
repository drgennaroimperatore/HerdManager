<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/species_radioGroup"
        android:layout_width="405dp"
        android:layout_height="86dp"
        android:layout_marginTop="164dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Cattle" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camel" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sheep" />

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goat" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            style="@style/BlackHeadingTextMedium"
            android:text="Date and and Herd Size">
        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WhiteHeadingTextSmall"
        android:layout_marginLeft="21dp"
        android:text="Date"></TextView>

    <EditText
        android:id="@+id/new_herd_activity_textview_date_of_insertion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NumberEditTextStyle"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:width="140dp">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                style="@style/WhiteHeadingTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PWnd">

            </TextView>

            <EditText
                android:id="@+id/editText_confirm_herd_visit_number_of_babies"
                style="@style/NumberEditTextStyle"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:inputType="number">

            </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WhiteHeadingTextSmall"
                android:text="Young">

            </TextView>

            <EditText
                android:id="@+id/editText_confirm_herd_visit_number_of_young"
                style="@style/NumberEditTextStyle"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:inputType="number">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp">

            <TextView
                style="@style/WhiteHeadingTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult">
            </TextView>

            <EditText
                android:id="@+id/editText_confirm_herd_visit_number_of_old"
                style="@style/NumberEditTextStyle"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:inputType="number">

            </EditText>

        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            style="@style/BlackHeadingTextMedium"
            android:text="Farmer Information">
        </TextView>

            <ImageView
                android:id="@+id/new_case_textview_farmer_assignment_status_img"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="25dp"
                android:src="@drawable/drawable_sync_status_not_synced"
                android:gravity="left">
            </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    <Button
        android:id="@+id/add_new_farmer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/AppTheme.Button"
        android:text="Add Farmer" />

        <Button
            android:id="@+id/use_existing_farmer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@id/add_new_farmer_button"
            android:layout_toRightOf="@id/add_new_farmer_button"
            style="@style/AppTheme.Button"
            android:text="Use Saved Farmer" />

    </LinearLayout>

    <!--<TextView
        android:id="@+id/new_case_textview_farmer_assignment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:text="No Farmer Assigned"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18dp"
        android:textStyle="bold" />
-->

</LinearLayout>