<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/health_event_sign_row_signName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Name"
        style="@style/WhiteHeadingTextMedium"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">



        <TableRow>

            <TextView
                android:id="@+id/placeholder_hesr_young"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Affected Babies"
                style="@style/WhiteHeadingTextSmall"/>

            <TextView
                android:id="@+id/heading_number_of_affected_by_sign_young_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Affected Young"
                style="@style/WhiteHeadingTextSmall"/>


            <TextView
                android:id="@+id/heading_number_of_affected_old_text_view_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Affected Old"
                style="@style/WhiteHeadingTextSmall"/>



        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/health_event_sign_row_number_of_affected_babies_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="00"
                style="@style/WhiteHeadingTextSmall"/>

            <TextView
                android:id="@+id/health_event_sign_row_number_of_affected_young_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="00"
                style="@style/WhiteHeadingTextSmall"/>

            <TextView
                android:id="@+id/health_event_sign_row_number_of_affected_old_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="00"
                style="@style/WhiteHeadingTextSmall"/>



        </TableRow>


    </TableLayout>

</LinearLayout>