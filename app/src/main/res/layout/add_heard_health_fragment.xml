<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.AddHeardHealthEventFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/health_event_show_disease_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="16dp"

            android:layout_marginBottom="74dp"
            android:background="@color/colorPrimary"
            android:text="Add Disease"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/health_event_show_sign_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="74dp"
            android:background="@color/colorPrimary"
            android:text="Add Sign"
            android:textColor="@color/black" />

    </LinearLayout>



    <ExpandableListView
        android:id="@+id/health_event_exapandableListView"
        android:layout_width="408dp"
        android:layout_height="395dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp"
        android:longClickable="true">

    </ExpandableListView>





</LinearLayout>