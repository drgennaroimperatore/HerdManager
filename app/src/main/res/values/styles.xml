<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlackHeadingTextLarge" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="WhiteHeadingTextLarge" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
    </style>


    <style name="BlackHeadingTextMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>


    </style>

    <style name="GrayHeadingTextMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>

    </style>

    <style name="BlackHeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="BlackHeadingTextSmall" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="BlackExpandableListHeading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="WhiteHeadingTextSmall" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="WhiteHeadingTextMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24dp</item>

    </style>

    <style name="RowHeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="RowSubHeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="RowContentTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NumberEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/edit_box_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="NumberEditTextStyleDark" parent="android:Widget.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@android:color/black </item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
